@model IEnumerable<MVCTraining.Models.ManageUsersViewModel>

@{
    ViewBag.Title = "Manage users";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roles[0].RoleId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Claims[0].ClaimType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Claims[0].ClaimValue)
        </th>
        <th>
            @Html.DisplayName("Actions")
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>            
            @foreach (var role in item.Roles)
            {
                <td>
                    @Html.DisplayFor(modelItem => role.RoleId)
                </td>
            }
            @foreach (var claim in item.Claims)
            {
                <td>
                    @Html.DisplayFor(modelItem => claim.ClaimType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => claim.ClaimValue)
                </td>
            }
            <td>
                @Html.ActionLink("Edit", "Edit", new { userId = item.Id })
                @Html.ActionLink("Delete", "Delete", new { userId = item.Id })
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Back to List", "Index", "Manage")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}